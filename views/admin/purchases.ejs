  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 0;
      color: #333;
    }

    header {
      display: flex;
      flex-wrap: wrap;
      background: #2c3e50;
      color: #fff;
      padding: 1rem;
      align-items: center;
      justify-content: space-between;
    }

    header h2 {
      margin: 0;
      font-size: 1.1rem;
    }

    main {
      max-width: 1220px;
      margin: 2rem auto;
      padding: 1rem;
    }

    .card {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 1.5rem;
      margin-bottom: 2rem;
      overflow-x: auto;
    }

    form .form-group {
      margin-bottom: 1rem;
    }

    label {
      display: block;
      margin-bottom: 0.3rem;
      font-weight: bold;
    }

    input,
    select {
      width: 100%;
      padding: 0.5rem;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    button {
      background: #3498db;
      color: white;
      border: none;
      padding: 0.6rem 1.2rem;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background: #2980b9;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
      min-width: 600px;
    }

    th,
    td {
      padding: 0.8rem;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }

    th {
      background: #f0f0f0;
      font-size: 0.9rem;
    }

    td {
      font-size: 0.9rem;
    }

    .badge {
      padding: 0.4rem 0.5rem;
      border-radius: 4px;
      font-size: 0.7rem;
      color: white;
      font-weight: bold;
      display: inline-block;
      text-align: center;
      min-width: 90px;
    }

    .badge.success {
      background: #2ecc71;
    }

    .badge.progress {
      background: #f1c40f;
    }

    .badge.canceled {
      background: #e74c3c;
    }

    .delete-btn {
      background: #e74c3c;
      padding: 0.4rem 0.8rem;
      border-radius: 4px;
      font-size: 0.8rem;
    }

    .delete-btn:hover {
      background: #c0392b;
    }

    /* üîπ –ú–æ–±–∏–ª—å–Ω–∞—è –∞–¥–∞–ø—Ç–∞—Ü–∏—è */
    @media (max-width: 768px) {
      header {
        flex-direction: column;
        align-items: flex-start;
      }

      header h2 {
        font-size: 1rem;
        margin-bottom: 0.5rem;
      }

      main {
        margin: 1rem;
        padding: 0.5rem;
      }

      .card {
        padding: 1rem;
      }

      table {
        font-size: 0.8rem;
      }

      th,
      td {
        padding: 0.5rem;
      }

      .badge {
        font-size: 0.6rem;
        min-width: auto;
        padding: 0.3rem 0.4rem;
      }

      .delete-btn {
        padding: 0.3rem 0.6rem;
        font-size: 0.7rem;
      }
    }
  </style>
</head>

<body>
